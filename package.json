{
  "private": true,
  "name": "type-scale",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "per-env",
    "start:production": "npm run -s serve",
    "start:development": "npm run -s dev",
    "build": "preact build",
    "serve": "preact build && preact serve",
    "dev": "preact watch",
    "lint": "standard '{src,tests}/**/*.js'",
    "test": "jest"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.2",
    "eslint": "^6.1.0",
    "eslint-plugin-jest": "^22.15.0",
    "jest": "^24.8.0",
    "jest-preact-preset": "^1.0.0",
    "per-env": "^1.0.2",
    "preact-cli": "^3.0.0-rc.4",
    "preact-render-spy": "^1.2.1",
    "preact-render-to-string": "^4.1.0",
    "standard": "^12.0.0"
  },
  "dependencies": {
    "preact": "^8.2.6"
  },
  "jest": {
    "preset": "jest-preact-preset",
    "moduleNameMapper": {
      "\\.css$": "<rootDir>/tests/__mocks__/fileMocks.js"
    }
  },
  "standard": {
    "env": {
      "jest": true
    },
    "parser": "babel-eslint"
  }
}
