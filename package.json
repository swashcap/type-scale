{
  "private": true,
  "name": "type-scale",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "per-env",
    "start:production": "npm run -s serve",
    "start:development": "npm run -s dev",
    "build": "preact build --dest docs --template src/index.html",
    "serve": "npm run build && preact serve",
    "dev": "preact watch --template src/index.html",
    "lint": "standard '{src,tests}/**/*.js'",
    "test": "jest"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^6.8.0",
    "eslint-plugin-jest": "^23.8.0",
    "jest": "^25.1.0",
    "jest-preact-preset": "^1.0.0",
    "per-env": "^1.0.2",
    "preact-cli": "^3.0.0-rc.9",
    "preact-render-spy": "^1.2.1",
    "preact-render-to-string": "^5.1.4",
    "standard": "^14.3.1"
  },
  "dependencies": {
    "preact": "^10.3.2"
  },
  "jest": {
    "preset": "jest-preact-preset",
    "moduleNameMapper": {
      "\\.css$": "<rootDir>/tests/__mocks__/fileMocks.js"
    }
  },
  "standard": {
    "env": {
      "jest": true
    },
    "parser": "babel-eslint"
  }
}
